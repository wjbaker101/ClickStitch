{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [ "./src/*" ]
        }
    }
}